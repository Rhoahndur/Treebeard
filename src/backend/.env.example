# TreeBeard Backend - Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# Application
# =============================================================================
APP_NAME=TreeBeard Energy Recommendation API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://treebeard:treebeard@localhost:5432/treebeard
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=86400

# =============================================================================
# API Configuration
# =============================================================================
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
MAX_UPLOAD_SIZE_MB=10

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=development-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# =============================================================================
# Recommendation Engine
# =============================================================================
RECOMMENDATION_CACHE_TTL_SECONDS=86400
MAX_RECOMMENDATIONS=3

# =============================================================================
# External APIs
# =============================================================================
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229

# =============================================================================
# Data Processing
# =============================================================================
MIN_USAGE_MONTHS=3
PREFERRED_USAGE_MONTHS=12

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
